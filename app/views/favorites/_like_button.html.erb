<%# お気に入りボタンはmicroposts/_micropostsに実装したため、このファイルは使っていない %>
<% unless current_user == user %>

  <% if current_user.liking?(micropost) %>
  
    <%= form_for(current_user.favorites.find_by(micropost_id: user.id), html: { id: "favorite_form_#{micropost.id}", method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, user.id %>
      <%= f.submit 'UnFavorite', class: 'btn btn-success btn-block' %>
    <% end %>
    
  <% else %>
  
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :micropost_id, user.id %>
      <%= f.submit 'Favorite', class: 'btn btn-success btn-block' %>
    <% end %>
    
  <% end %>
  
<% end %>